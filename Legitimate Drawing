SCREEN _NEWIMAGE(800, 650, 256)
DO
    DO WHILE _MOUSEINPUT
    LOOP
    IF _MOUSEBUTTON(1) = -1 THEN PSET (_MOUSEX, _MOUSEY), INT(RND *14) + 1  ELSE
    IF _MOUSEBUTTON(2) = -1 THEN LINE (_MOUSEX - 1, _MOUSEY - 1)-(_MOUSEX + 1, _MOUSEY + 1), INT(RND * 14) + 1, B  ELSE

    IF _KEYDOWN(68) OR _KEYDOWN(100) THEN _MOUSEMOVE 400, 325
    IF _KEYDOWN(87) OR _KEYDOWN(113) THEN LINE (_MOUSEX - 3, _MOUSEY - 3)-(_MOUSEX + 3, _MOUSEY + 3), INT(RND * 14) + 1
    IF _KEYDOWN(81) OR _KEYDOWN(119) THEN LINE (_MOUSEX - 3, _MOUSEY + 3)-(_MOUSEX + 3, _MOUSEY - 3), INT(RND * 14) + 1
    IF _KEYDOWN(69) OR _KEYDOWN(101) THEN LINE (_MOUSEX - 3, _MOUSEY)-(_MOUSEX + 3, _MOUSEY), INT(RND * 14) + 1
    IF _KEYDOWN(82) OR _KEYDOWN(114) THEN LINE (_MOUSEX - 1, _MOUSEY - 1)-(_MOUSEX + 5, _MOUSEY - 1), INT(RND * 14) + 1: LINE -(_MOUSEX + 7, _MOUSEY + 4), INT(RND * 14) + 1: LINE -(_MOUSEX + 1, _MOUSEY + 4), INT(RND * 14) + 1: LINE -(_MOUSEX - 1, _MOUSEY - 1), INT(RND * 14) + 1
    IF _KEYDOWN(84) OR _KEYDOWN(116) THEN LINE (_MOUSEX - 3, _MOUSEY - 3)-(_MOUSEX + 3, _MOUSEY - 3), INT(RND * 14) + 1: LINE -(_MOUSEX, _MOUSEY + 4), INT(RND * 14) + 1: LINE -(_MOUSEX - 3, _MOUSEY - 3), INT(RND * 14) + 1
    IF _KEYDOWN(67) OR _KEYDOWN(99) THEN CIRCLE (_MOUSEX, _MOUSEY), 5, INT(RND * 14) + 1
    IF _KEYDOWN(88) OR _KEYDOWN(120) THEN LINE (_MOUSEX - 3, _MOUSEY - 3)-(_MOUSEX + 3, _MOUSEY + 3), INT(RND * 14) + 1: LINE (_MOUSEX - 3, _MOUSEY + 3)-(_MOUSEX + 3, _MOUSEY - 3), INT(RND * 14) + 1
    IF _KEYDOWN(27) THEN CLS
    _DELAY .001
LOOP
